<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" href="~/materialize/css/materialize.min.css" />
    <script src="~/materialize/js/materialize.min.js"></script>

</head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">           
            <nav>
                <div class="nav-wrapper cyan darken-2">
                    <ul id="nav-mobile" class="center-align hide-on-med-and-down">
                        <li>@Html.ActionLink("Nombre de la aplicación", "Index", "Home", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("Inventario", "Index", "InventarioClient", new { area = "" }, null)</li>
                    </ul>
                </div>
            </nav>
        </div>
    </div>
    <div class="container">
        @RenderBody()
        <hr />        
            <footer class="page-footer cyan darken-2 right-align">
                @DateTime.Now.Year - Mi aplicación ASP.NET
            </footer>
    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
